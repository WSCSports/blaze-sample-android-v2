<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EntryPointActivity">

    <com.wscsports.blaze_sample_android.core.ui.SampleAppbarView
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/entry_point_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Universal link -->
            <TextView
                android:id="@+id/universal_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Universal link"
                android:textSize="16sp"
                android:textColor="@color/text_color_primary"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/simulate_universal_link_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackground"
                android:text="https://your-link.com"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#085CFF"
                android:drawableStart="@drawable/ic_universal_link"
                android:drawablePadding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/universal_title_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/separator_view_universal_link"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:background="@color/divider_color"
                app:layout_constraintTop_toBottomOf="@id/simulate_universal_link_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/data_source_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Data source"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_primary"
                app:layout_constraintTop_toBottomOf="@+id/separator_view_universal_link"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Stories -->
            <TextView
                android:id="@+id/stories_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Stories"
                android:textSize="14sp"
                android:textColor="@color/text_color_primary"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/data_source_title_text_view"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/stories_label_expression_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/stories_title_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/play_stories_button">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/stories_label_expression_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingVertical="0dp"
                    android:paddingHorizontal="8dp"
                    android:hint="Stories label expression"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/play_stories_button"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:text="Play"
                app:layout_constraintTop_toTopOf="@id/stories_label_expression_input_layout"
                app:layout_constraintBottom_toBottomOf="@id/stories_label_expression_input_layout"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Moments -->
            <TextView
                android:id="@+id/moments_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Moments"
                android:textSize="14sp"
                android:textColor="@color/text_color_primary"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/stories_label_expression_input_layout"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/moments_label_expression_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/moments_title_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/play_moments_button">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/moments_label_expression_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingVertical="0dp"
                    android:paddingHorizontal="8dp"
                    android:hint="Moments label expression"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/play_moments_button"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:text="Play"
                app:layout_constraintTop_toTopOf="@id/moments_label_expression_input_layout"
                app:layout_constraintBottom_toBottomOf="@id/moments_label_expression_input_layout"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Videos -->
            <TextView
                android:id="@+id/videos_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Videos"
                android:textSize="14sp"
                android:textColor="@color/text_color_primary"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/moments_label_expression_input_layout"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/videos_label_expression_input_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/videos_title_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/play_videos_button">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/videos_label_expression_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:paddingVertical="0dp"
                    android:paddingHorizontal="8dp"
                    android:hint="Videos label expression"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/play_videos_button"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:text="Play"
                app:layout_constraintTop_toTopOf="@id/videos_label_expression_input_layout"
                app:layout_constraintBottom_toBottomOf="@id/videos_label_expression_input_layout"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/separator_view_play_labels"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:background="@color/divider_color"
                app:layout_constraintTop_toBottomOf="@id/videos_label_expression_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/single_id_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Single ID"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_primary"
                app:layout_constraintTop_toBottomOf="@+id/separator_view_play_labels"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/play_story_id_button"
                android:layout_width="112dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Play story"
                android:paddingHorizontal="2dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toBottomOf="@id/single_id_title_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/play_moment_id_button"/>

            <Button
                android:id="@+id/play_moment_id_button"
                android:layout_width="112dp"
                android:layout_height="48dp"
                android:text="Play moment"
                android:paddingHorizontal="2dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="@+id/play_story_id_button"
                app:layout_constraintStart_toEndOf="@+id/play_story_id_button"
                app:layout_constraintEnd_toStartOf="@+id/play_video_id_button"/>

            <Button
                android:id="@+id/play_video_id_button"
                android:layout_width="112dp"
                android:layout_height="48dp"
                android:text="Play video"
                android:paddingHorizontal="2dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="@+id/play_story_id_button"
                app:layout_constraintStart_toEndOf="@+id/play_moment_id_button"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>
