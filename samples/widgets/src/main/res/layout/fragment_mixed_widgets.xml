<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Stories row Widget -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Stories Row Widget"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.blaze.blazesdk.features.stories.widgets.row.BlazeStoriesWidgetRowView
            android:id="@+id/stories_row_widget_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="16dp" />

        <!-- Moments Row Widget -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Moments Row Widget"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.blaze.blazesdk.features.moments.widgets.row.BlazeMomentsWidgetRowView
            android:id="@+id/moments_row_widget_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <!-- Stories Grid Widget -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Stories Grid Widget"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.blaze.blazesdk.features.stories.widgets.grid.BlazeStoriesWidgetGridView
            android:id="@+id/stories_grid_widget_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>