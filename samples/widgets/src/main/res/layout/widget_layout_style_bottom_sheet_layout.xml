<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/handleView"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/handle_bottom_sheet_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@+id/handleView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/customizeExampleTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Customization examples"
                android:textColor="@color/text_color_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/customizeExampleDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="More than one option may be selected"
                android:textColor="@color/text_color_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customizeExampleTitleTextView"/>

            <View
                android:id="@+id/divider_header_title"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/divider_color"
                app:layout_constraintTop_toBottomOf="@+id/customizeExampleDescriptionTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <CheckBox
                android:id="@+id/is_custom_image_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom thumbnail appearance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_header_title"
                />

            <CheckBox
                android:id="@+id/is_custom_indicator_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom status indicator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/is_custom_image_check_box"
                />

            <CheckBox
                android:id="@+id/is_custom_title_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/is_custom_indicator_check_box"
                />

            <CheckBox
                android:id="@+id/is_custom_badge_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custom badge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/is_custom_title_check_box"
                />

            <View
                android:id="@+id/divider_customizations"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/divider_color"
                app:layout_constraintTop_toBottomOf="@+id/is_custom_badge_check_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <CheckBox
                android:id="@+id/is_custom_item_style_overrides_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Custom override for a single item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_customizations"
                app:layout_constraintBottom_toTopOf="@+id/divider_item_style_overrides"
                />

            <View
                android:id="@+id/divider_item_style_overrides"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/divider_color"
                app:layout_constraintTop_toBottomOf="@+id/is_custom_item_style_overrides_check_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        style="@style/BlazeSampleButtonStyle"
        android:id="@+id/applyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>